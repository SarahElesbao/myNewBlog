<h2>Editar usuário <% resource_name.to_s.humanize %></h2><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class:"form-control my-2", placeholder:"Email *", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.text_field :first_name, class:"form-control my-2", placeholder:"Primeiro nome *", autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, class:"form-control my-2", placeholder:"Ultimo nome *", autofocus: true, autocomplete: "last_name" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

 <div class="field">
    <%= f.label "Senha" %> <i>(Deixe em branco se não deseja alterá-la)</i><br />
    <%= f.password_field :password, class:"form-control my-2", placeholder:"Senha *", autofocus: true, autocomplete: "password" %>
    <% if @minimum_password_length %>
      <br />
      <em>Mínimo de <%= @minimum_password_length %> caracteres</em>
    <% end %>
  </div>

  <div class="field form-group">
   <%= f.password_field :password_confirmation, class:"form-control my-2", placeholder:"Confirmar senha *", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "Senha atual:" %> <i>(Precimos de sua senha atual para confirmar as mudanças)</i><br />
    <%= f.password_field :current_password, class:"form-control my-2", placeholder:"Senha atual *", autocomplete: "current-password" %>
  </div>


<br/>
  <div class="actions">
    <%= f.submit "atualizar", class:'btn btn-primary'%>
    <%= link_to "voltar", :back , class:'btn btn-primary' %>
  </div>
<% end %>


<div class="card shadow-sm rounded my-5">
  <div class="card-header">
      <h3>Cancelar a conta >:( </h3>
  </div>
    <div class="card-body">
      <p>É uma pena você estar nos deixando... :( <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "tem certeza disso? :(" }, method: :delete, class:'btn btn-danger' %></p>
  </div>
</div>